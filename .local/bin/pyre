#!/bin/bash
# ┌────────────────────────────────────────────────────────────────────────────┐
# │                          PYRE ENGINE - ENTRY POINT                         │
# └────────────────────────────────────────────────────────────────────────────┘

# [CRITICAL] Source the function library.
# [INFO] All logic is contained within this file.
source "$HOME/.config/pyre/functions.sh"

# ┌────────────────────────────────────────────────────────────────────────────┐
# │                           SCRIPT ENTRY POINT                               │
# └────────────────────────────────────────────────────────────────────────────┘
# [INFO] First, check if all dependencies are met.
check_dependencies

# [INFO] Then, determine which action to perform based on arguments.
case "$1" in
theme)
  if [ -n "$2" ]; then
    apply_theme "$2"
  else
    show_theme_menu
  fi
  ;;
layout)
  show_layout_menu
  ;;
*)
  show_main_menu
  ;;
esac
