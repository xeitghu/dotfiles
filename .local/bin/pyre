#!/bin/bash
# â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
# â•‘                                                                         â•‘
# â•‘                           PYRE ENGINE                                   â•‘
# â•‘                                                                         â•‘
# â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
# Refactored with a dedicated Layouts submenu for modularity.

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚                 PATHS & SETTINGS                 â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜
WALLPAPER_DIR="$HOME/Pictures/Wallpapers"
STATE_FILE="$HOME/.config/pyre/state"
SCRIPTS_DIR="$HOME/.config/hypr/scripts"
ENGINE_THEMES_DIR="$HOME/.config/hypr/engine/themes"
WAL_CACHE_DIR="$HOME/.cache/wal"

# =================================================================
#                         CORE FUNCTIONS
# =================================================================

# --- Dependency Check ---
check_dependencies() {
    local missing=0
    # ïš Check for required commands
    for cmd in wofi swww wal kitty notify-send; do
        if ! command -v "$cmd" &> /dev/null; then
            notify-send "Pyre Error" "Required command not found: $cmd" -i "dialog-error"; missing=1; fi
    done
    # ïš Check for required directories
    for dir in "$WALLPAPER_DIR" "$ENGINE_THEMES_DIR" "$SCRIPTS_DIR"; do
        if [ ! -d "$dir" ]; then
            notify-send "Pyre Error" "Required directory not found: $dir" -i "dialog-error"; missing=1; fi
    done
    [ "$missing" -eq 1 ] && exit 1
}

# --- Reload Services ---
reload_services() {
    hyprctl reload
    pkill -SIGUSR2 waybar
    pkill dunst && dunst &
    kitty @ set-colors --all --configured "$WAL_CACHE_DIR/colors-kitty.conf"
}

# =================================================================
#                        LAYOUT LAUNCHERS
# =================================================================

# --- Showcase Layout ---
launch_showcase_layout() {
    hyprctl keyword source ~/.config/hypr/showcase.conf
    sleep 0.2; kitty --title "hollywood-clock" tty-clock -c -C 2 &
    sleep 0.2; kitty --title "hollywood-cava" cava &
    sleep 0.2; kitty --title "hollywood-matrix" unimatrix &
    sleep 0.2; kitty --title "hollywood-pipes" pipes.sh &
}

# --- F0urth Layout ---
launch_f0urth_layout_simple() {
    local small_font_size=8
    kitty -o font_size=$small_font_size &
    sleep 0.3
    local directions=("r" "d" "l")
    for dir in "${directions[@]}"; do
        hyprctl dispatch movefocus "$dir"
        kitty -o font_size=$small_font_size &
        sleep 0.3
    done
}

# --- Fastfetch Layout ---
launch_fastfetch_layout() {
    hyprctl keyword source ~/.config/hypr/pyre_layouts.conf
    sleep 0.1
    kitty --title "pyre-fastfetch" \
          -o window_padding_width=0 \
          -o scrollback_lines=0 \
          sh -c "tput civis; fastfetch; sleep infinity" &
}

# --- Dual Pane Layout ---
launch_dual_pane_layout() {
    hyprctl keyword source ~/.config/hypr/filemanager.conf
    thunar &
    sleep 0.5
    kitty --title "fm-yazi" yazi &
    sleep 1
    hyprctl keyword source ~/.config/hypr/filemanager_clear.conf
}

# =================================================================
#                   ENGINE: THEME & WALLPAPER
# =================================================================

# --- Apply Theme ---
apply_theme() {
    local theme_name_lower=$1
    local theme_name_capitalized; theme_name_capitalized=$(echo "$theme_name_lower" | awk '{print toupper(substr($0,1,1))substr($0,2)}')
    
    cp "$ENGINE_THEMES_DIR/hypr/$theme_name_lower.conf"   "$WAL_CACHE_DIR/colors-hyprland.conf"
    cp "$ENGINE_THEMES_DIR/waybar/$theme_name_lower.css"  "$WAL_CACHE_DIR/colors-waybar.css"
    cp "$ENGINE_THEMES_DIR/kitty/$theme_name_lower.conf"  "$WAL_CACHE_DIR/colors-kitty.conf"
    cp "$ENGINE_THEMES_DIR/dunst/$theme_name_lower.dunstrc" "$WAL_CACHE_DIR/colors-dunst"
    
    local theme_wallpaper_dir="$WALLPAPER_DIR/$theme_name_lower"
    if [ -d "$theme_wallpaper_dir" ]; then
        local wallpaper; wallpaper=$(find "$theme_wallpaper_dir" -type f | shuf -n 1)
        [ -n "$wallpaper" ] && swww img "$wallpaper" --transition-type wipe --transition-angle 30 --transition-step 90
    fi
    
    reload_services
    echo "$theme_name_capitalized" > "$STATE_FILE"
    notify-send "ğŸ¨ Pyre: Theme Changed" "Palette activated: $theme_name_capitalized" -i "preferences-desktop-theme"
}

# --- Set Random Wallpaper ---
set_random_wallpaper() {
    if ! pgrep -x "swww-daemon" > /dev/null; then
        notify-send "Pyre Error" "swww-daemon is not running!" -i "dialog-error"; return; fi
        
    local wallpaper; wallpaper=$(find "$WALLPAPER_DIR" -type f -not -path "*/hypr/*" | shuf -n 1)
    if [ -z "$wallpaper" ]; then
        notify-send "Pyre Error" "No wallpapers found in $WALLPAPER_DIR" -i "dialog-error"; return; fi
        
    swww img "$wallpaper" --transition-type wipe --transition-angle 30 --transition-step 90
    wal -i "$wallpaper" -q -n -s
    
    reload_services
    echo "random" > "$STATE_FILE"
    notify-send "ï€¾ Pyre: Wallpaper Changed" "Palette generated from:\n$(basename "$wallpaper")" -i "preferences-desktop-wallpaper"
}

# =================================================================
#                       MENUS & DISPATCHER
# =================================================================

# --- Show Theme Menu ---
show_theme_menu() {
    local options="ï†… Latte\nï†† Mocha\nï¬ Frappe\nï‹œ Macchiato"
    local choice; choice=$(printf "%b" "$options" | wofi --dmenu --prompt "Select Theme:" --width 300 --height 170)
    if [ -n "$choice" ]; then
        local theme_name; theme_name=$(echo "$choice" | sed -e 's/ï†… //' -e 's/ï†† //' -e 's/ï¬ //' -e 's/ï‹œ //' | tr '[:upper:]' '[:lower:]')
        apply_theme "$theme_name"
    fi
}

# --- Show Layout Menu ---
show_layout_menu() {
    local options=("ó°„› Showcase" "ï„Š F0urth" "ï„ˆ Fastfetch" "ï„§ Dual Pane")
    local choice; choice=$(printf "%s\n" "${options[@]}" | wofi --dmenu --prompt "Select Layout:" --width 300 --height 170)
        case "$choice" in
            "ó°„› Showcase")  (launch_showcase_layout) & ;;
            "ï„Š F0urth")     (launch_f0urth_layout_simple) & ;;
            "ï„ˆ Fastfetch")  (launch_fastfetch_layout) & ;;
            "ï„§ Dual Pane")  (launch_dual_pane_layout) & ;;
        esac
}

# --- Show Main Menu ---
show_main_menu() {
    local options=("ï‡¼ Theme" "ï€¾ Wallpaper" "ï„› Layouts" "ï€‘ Power" "ï€° Screenshot" "ï‡š Clipboard" "ï€£ Lock")
    local choice; choice=$(printf "%s\n" "${options[@]}" | wofi --dmenu --prompt "Pyre Mission Control:" --width 300 --height 290)
    case "$choice" in
        "ï‡¼ Theme")      show_theme_menu ;;
        "ï€¾ Wallpaper")  set_random_wallpaper ;;
        "ï„› Layouts")    show_layout_menu ;;
        "ï¼ Files")      launch_file_layout ;;
        "ï€‘ Power")      "$SCRIPTS_DIR/powermenu.sh" ;;
        "ï€° Screenshot") "$SCRIPTS_DIR/screenshot.sh" ;;
        "ï‡š Clipboard")  "$SCRIPTS_DIR/clipboard_history.sh" ;;
        "ï€£ Lock")       "$SCRIPTS_DIR/lockscreen.sh" ;;
    esac
}

# â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”
# â”‚                SCRIPT ENTRY POINT                â”‚
# â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜
check_dependencies

case "$1" in
    theme)      show_theme_menu ;;
    wallpaper)  set_random_wallpaper ;;
    layout)     show_layout_menu ;;
    power)      "$SCRIPTS_DIR/powermenu.sh" ;;
    screenshot) "$SCRIPTS_DIR/screenshot.sh" ;;
    clipboard)  "$SCRIPTS_DIR/clipboard_history.sh" ;;
    lock)       "$SCRIPTS_DIR/lockscreen.sh" ;;
    *)          show_main_menu ;;
esac
