extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.bz2)  tar xjf "$1"    ;;
            *.tar.gz)   tar xzf "$1"    ;;
            *.bz2)      bunzip2 "$1"    ;;
            *.rar)      unrar x "$1"    ;;
            *.gz)       gunzip "$1"     ;;
            *.tar)      tar xf "$1"     ;;
            *.zip)      unzip "$1"      ;;
            *.7z)       7z x "$1"       ;;
            *)          echo "'$1' –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å —Ä–∞—Å–ø–∞–∫–æ–≤–∞–Ω" ;;
        esac
    else
        echo "'$1' - –Ω–µ –≤–∞–ª–∏–¥–Ω—ã–π —Ñ–∞–π–ª"
    fi
}

mkcd() {
    mkdir -p "$1" && cd "$1"
}

